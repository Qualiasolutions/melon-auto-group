# Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ==========================================
# REQUIRED VARIABLES
# ==========================================

# Supabase Configuration (Required)
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Admin Authentication (Required)
# Comma-separated list of admin email addresses that can access admin panel
# These users must be registered in Supabase Auth
ADMIN_EMAILS=admin@example.com,another-admin@example.com

# Email Configuration (Required for contact forms)
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here
# Email address that will receive contact form submissions
NEXT_PUBLIC_CONTACT_EMAIL=info@example.com
# Email address shown as sender (must be verified domain in Resend)
RESEND_FROM_EMAIL="Your Company <noreply@example.com>"

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ==========================================
# OPTIONAL VARIABLES
# ==========================================

# Firecrawl API Configuration (Optional - for Smart Import Feature)
# Get your API key from: https://www.firecrawl.dev/
# Used for AI-powered vehicle data extraction from Bazaraki and Facebook Marketplace
FIRECRAWL_API_KEY=fc-your-firecrawl-api-key-here

# Apify API Configuration (Optional - for web scraping)
# Get your API token from: https://console.apify.com/account/integrations
APIFY_API_TOKEN=apify_api_your-token-here

# PostgreSQL Direct Connection (Optional - for scripts)
POSTGRES_URL=postgres://postgres:password@host:5432/postgres
POSTGRES_URL_NON_POOLING=postgres://postgres:password@host:5432/postgres
POSTGRES_PRISMA_URL=postgres://postgres:password@host:6543/postgres?pgbouncer=true
POSTGRES_DATABASE=postgres
POSTGRES_HOST=db.example.supabase.co
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_USER=postgres

# Analytics and Monitoring (Optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Development Settings
NODE_ENV=development